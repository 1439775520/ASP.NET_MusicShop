         <script src="../Assets/js/jquery-3.4.1.min.js"></script> 
        <script>
            $(function () {
                $("#nav-item a").each(function () {
                    var index = window.location.href.indexOf($(this).attr("href"));
                    if (index != -1) {
                        $(this).addClass("pure-menu-selected");
                    } else {
                        $(this).removeClass("pure-menu-selected");
                    }
                })
            })
        </script>
